---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<p>
				<p>I'm Shaun Lawrie from Wellington, New Zealand. I work in IT as an all-around problem solver.</p>
				<p>You can find me on Twitter, GitHub and LinkedIn. I'm more of a lurker than a contributor to online discussion but sometimes I might post about some of the things I enjoy when I have time to explore i.e.</p>
				<p>Check out the stuff I've managed to find the time to publish here ðŸ‘‡</p>
			</p>
			<h2>Articles</h2>
			<section>
				<ul class="content-center grid grid-cols-2">
					{
						posts.map((post) => (
							<li class="m-6">
								<a href={`/blog/${post.slug}/`}>
									<img class="rounded-lg" width="100%" src={post.data.heroImage} alt="" />
									<div class="flex justify-between pr-1">
										<h4 class="text-lg">{post.data.title}</h4>
										<p>
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
									<p>
										{post.data.description}
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>